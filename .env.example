# ── Database (Neon PostgreSQL) ──
DATABASE_URL="postgresql://user:password@your-neon-host.neon.tech/neondb?sslmode=require"

# ── Spring Boot JDBC (same DB, different format) ──
SPRING_DATASOURCE_URL=jdbc:postgresql://your-neon-host.neon.tech/neondb?sslmode=require
SPRING_DATASOURCE_USERNAME=neondb_owner
SPRING_DATASOURCE_PASSWORD=your_password

# ── Frontend → Backend API ──
# Local development:
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
# Production (set in Vercel dashboard):
# NEXT_PUBLIC_API_BASE_URL=https://your-spring-boot.railway.app

# ── Spring Boot → Frontend (CORS) ──
WEB_ORIGIN=http://localhost:3000

# ── Spring Boot → FastAPI LLM Service ──
LLM_BASE_URL=http://localhost:8000
